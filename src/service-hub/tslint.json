{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "rules": {
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "trailing-comma": true,
        "semicolon": false,
        "object-literal-sort-keys": false,
        "no-submodule-imports": false,
        "no-console": false
    },
    "linterOptions": {
        "exclude": [
            "server/migration/*.ts"
        ]
    }
}
